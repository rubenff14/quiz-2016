<p><label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" 
<% if(quiz.pregunta) { %>
	value="<%= quiz.pregunta %>"/>
<% } else { %>
	placeholder = "pregunta"
<% } %>
</p>

<p><label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" 
<% if(quiz.respuesta) { %>
	value="<%= quiz.respuesta %>"/>
<% } else { %>
	placeholder = "respuesta"
<% } %>
</p>

